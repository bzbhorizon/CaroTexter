<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:layout_width="wrap_content" android:layout_weight="1" android:id="@+id/end_button" android:layout_height="wrap_content" android:text="Close and exit"></Button>
        <Button android:text="Force SMS now" android:id="@+id/day" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="1"></Button>
    </LinearLayout>
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/tv"></TextView>
</LinearLayout>
